<resources>
    <style name="Theme.LogCompat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <item name="android:navigationBarColor">@color/highEmphasis</item>
    </style>

    <style name="Theme.LogCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LogCompat.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="iconTint">@color/mediumEmphasis</item>
    </style>

    <style name="Theme.LogCompat.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.LogCompat.OverFlowButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/mediumEmphasis</item>
    </style>

    <style name="Theme.LogCompat.IconOnlyButton" parent="Theme.LogCompat.OverFlowButton">
        <item name="android:padding">0dp</item>
        <item name="android:tint">@color/primary</item>
    </style>

</resources>
